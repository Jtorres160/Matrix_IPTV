{
  "name": "iptvsupreme",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron ./electron/main.cjs",
    "desktop": "concurrently -k \"npm:dev\" \"npm:electron\"",
    "build": "vite build",
    "preview": "vite preview --port 5173",
    "lint": "eslint . --ext .js,.jsx --fix",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "electron-store": "^11.0.2",
    "nanoid": "^5.0.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-player": "^2.16.0",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.3.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.8",
    "prettier": "^3.3.3",
    "vite": "^5.4.0"
  },
  "build": {
    "appId": "com.matrix.iptv",
    "productName": "Matrix_IPTV",
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "directories": {
      "output": "release"
    },
    "linux": {
      "target": ["AppImage"],
      "category": "AudioVideo"
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    }
  }
}