{
  // Sets Prettier as the default formatter for all files
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // This is the magic part: it auto-formats every time you save
  "editor.formatOnSave": true,

  // This tells the editor to also auto-fix ESLint errors on save
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  }
}